<div id="home">
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
				<div class="brand">
					<%= image_tag 'oxys-logo.svg', alt: 'oxys intertaction design logo', class: 'header-brand-img' %>
	        <h1 class="header-brand-name">rodrigo quaresma</h1>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<h2>interaction design consultancy</h2>
				<p class="lead text-center">working to get great results</p>
			</div>
		</div>
	</div>
</div>

<div id="contact">
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-md-6 col-md-offset-3">
				<h3 class="text-center">talk to Us.</h3>
				<form role="form" id="conversion-form" action="https://www.rdstation.com.br/api/1.2/conversions" method="POST">
				  <input type="hidden" name="token_rdstation" value="f673c9314b3540bc10a4f6d4ee17d160" />
				  <input type="hidden" name="identificador" value="contact-page" />
				  <div class="form-group">
				    <label for="nome">name</label>
				    <input name="nome" id="nome" type="text" class="form-control required" placeholder="Enter your name">
				  </div>
				  <div class="form-group">
				    <label for="email">email</label>
				    <input name="email" id="email" type="email" class="form-control required" placeholder="Enter email">
				  </div>
				  <div class="form-group">
				    <label for="empresa">company</label>
				    <input name="empresa" id="empresa" type="text" class="form-control" placeholder="your company">
				  </div>
				  <div class="form-group">
				    <label for="message">message</label>
				    <textarea name="message" id="message" class="form-control required" rows="3"></textarea>
				  </div>
				  <button type="submit" class="btn btn-primary btn-lg">Submit</button>
				</form>
			</div>
		</div>
	</div>
</div>
<hr />
<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>
<script type="text/javascript" src="//rdstation-static.s3.amazonaws.com/js/jquery.validate/1.9/jquery.validate.min.js"></script>
<script type="text/javascript" src="//rdstation-static.s3.amazonaws.com/js/jquery.form/2.02/jquery.form.js"></script>
<script type="text/javascript" src="//rdstation-static.s3.amazonaws.com/js/rd/1.2/rdlps.min.js"></script>
<script type="text/javascript">
  var origConversionSuccess = conversionSuccess;
  conversionSuccess = function(resp) {
    origConversionSuccess(resp);
    try { _gaq.push(['_trackPageview', '/thankyou']); } catch(err) { }
    location.href = '/thankyou';
  }
</script>
